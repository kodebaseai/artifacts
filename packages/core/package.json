{
  "name": "@kodebase/core",
  "version": "1.0.0",
  "description": "Core TypeScript utilities for Kodebase v1",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "lint": "biome lint .",
    "lint:package": "publint",
    "lint:types": "attw --pack .",
    "format": "biome format .",
    "test": "vitest run",
    "prepack": "pnpm lint:package"
  },
  "dependencies": {
    "yaml": "^2.6.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@kodebase/typescript-config": "workspace:*",
    "@vitest/coverage-istanbul": "^3.0.7",
    "@types/node": "^22.5.1",
    "publint": "^0.3.15"
  }
}
