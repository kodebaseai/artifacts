{
  "name": "@kodebase/vitest-config",
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./node": {
      "types": "./src/node-config.ts",
      "default": "./src/node-config.ts"
    },
    "./js": {
      "types": "./src/js-config.ts",
      "default": "./src/js-config.ts"
    },
    "./react": {
      "types": "./src/react-config.ts",
      "default": "./src/react-config.ts"
    }
  },
  "imports": {
    "#*": "./src/*"
  },
  "typesVersions": {
    "*": {
      "base": [
        "dist/configs/base-config.d.ts"
      ],
      "ui": [
        "dist/configs/ui-config.d.ts"
      ],
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "collect-json-reports": "node dist/scripts/collect-json-outputs.js",
    "merge-json-reports": "nyc merge coverage/raw coverage/merged/merged-coverage.json",
    "report": "nyc report -t coverage/merged --report-dir coverage/report --reporter=html --exclude-after-remap false",
    "view-report": "open coverage/report/index.html"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "react": "^19.1.0",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@kodebase/typescript-config": "workspace:*",
    "@types/react": "19.1.0",
    "@vitest/coverage-istanbul": "^3.0.7",
    "@vitest/ui": "3.0.7",
    "glob": "^11.0.1",
    "jsdom": "^26.0.0",
    "nyc": "^17.1.0",
    "typescript": "latest"
  }
}
