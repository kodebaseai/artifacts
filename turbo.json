{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.*",
        "vitest.workspace.*",
        "vitest-setup.*"
      ],
      "outputs": ["coverage.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
